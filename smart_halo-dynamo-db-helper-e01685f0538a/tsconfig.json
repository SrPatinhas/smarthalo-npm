{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015"],
    "target": "es2015",
    "outDir": "./",
    "rootDir": "./src",
    // "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "coverage",
    "src/index.spec.ts"
   ]
}
